{
  "name": "project-management-app",
  "packageManager": "yarn@4.5.2",
  "private": true,
  "scripts": {
    "lint": "yarn workspaces foreach --all --parallel --verbose --interlaced run lint",
    "dev": "yarn workspaces foreach --all --parallel --verbose --interlaced run dev",
    "build": "yarn workspaces foreach --all --parallel --verbose --interlaced run build",
    "prettier": "prettier --write \"**/*.{js,ts,tsx}\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^3.5.3"
  }
}
